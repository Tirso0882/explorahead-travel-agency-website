# ===========================================
# ExploraHead Travel Agency - Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# Set these variables in Vercel Dashboard for production

# ===========================================
# REQUIRED - Application will not function without these
# ===========================================

# Formspree endpoint for contact form submissions
# Get your form ID from https://formspree.io
NEXT_PUBLIC_FORMSPREE_ENDPOINT=https://formspree.io/f/YOUR_FORM_ID

# ===========================================
# RECOMMENDED - Analytics & Error Monitoring
# ===========================================

# Google Analytics 4 Measurement ID
# Get from https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for client-side error tracking
# Get from https://sentry.io → Settings → Projects → Client Keys
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Sentry DSN for server-side error tracking (can be same as client)
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Sentry organization slug (for source map uploads)
SENTRY_ORG=your-org-slug

# Sentry project name (for source map uploads)
SENTRY_PROJECT=your-project-name

# Sentry auth token (for source map uploads during build)
# Generate at https://sentry.io → Settings → Auth Tokens
SENTRY_AUTH_TOKEN=sntrys_xxxxx

# ===========================================
# OPTIONAL - Override defaults
# ===========================================

# Base URL for the website (defaults to https://explorahead.com)
# Used for sitemap, robots.txt, and Open Graph metadata
NEXT_PUBLIC_BASE_URL=https://explorahead.com

# Active campaign for dynamic media content
# Options: summer-2024, winter-2024, black-friday-2024
# NEXT_PUBLIC_CAMPAIGN=summer-2024

# ===========================================
# DEVELOPMENT ONLY - Do not set in production
# ===========================================

# Enable debug mode for Sentry (verbose logging)
# SENTRY_DEBUG=true
